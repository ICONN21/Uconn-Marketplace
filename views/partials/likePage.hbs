<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Posts</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  {{> nav}}
  <main>
    <h1>Posts</h1>
    {{#each items}}
      <div class="post">
        <h2>{{this.title}}</h2>
        <p>{{this.description}}</p>
        <p>Posted by: {{this.user.email}}</p>
        {{#if ../logged_in}}
          <button class="like-btn" data-id="{{this.id}}">Like</button>
        {{/if}}
      </div>
    {{/each}}
  </main>
  <script src="/public/scrpit.js"></script>
</body>
</html>
